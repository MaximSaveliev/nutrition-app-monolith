{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(api|docs|openapi.json|redoc)(.*)",
      "dest": "/backend/**/*.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
